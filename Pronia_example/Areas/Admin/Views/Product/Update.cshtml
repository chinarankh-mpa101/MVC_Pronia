@model ProductUpdateVM
<div class="container">
	<div class="row">
		<h2>Update product</h2>
		<form method="post" asp-action="Update" asp-controller="Product" enctype="multipart/form-data">
			<input type="hidden" asp-for="Id" />

			<div class="form-group">
				<label for="title">Name</label>
				<input asp-for="Name" class="form-control" id="title" placeholder="Name">
				<span class="text-danger" asp-validation-for="Name"></span>
			</div>
			<div class="form-group">
				<label for="description">Description</label>
				<input asp-for="Description" class="form-control" id="description" placeholder="Description">
				<span class="text-danger" asp-validation-for="Description"></span>

			</div>

			<div class="form-group">
				<label for="Price">Price</label>
				<input asp-for="Price" class="form-control" id="Price" placeholder="Price">
				<span class="text-danger" asp-validation-for="Price"></span>
			</div>

			<div class="form-group">
				<input type="hidden" asp-for="MainImagePath"/>
				<img src="~/assets/images/website-images/@Model.MainImagePath" width="50" height="50" />
				<label for="MainImage">MainImage</label>
				<input asp-for="MainImage" class="form-control" id="MainImage" placeholder="MainImage">
				<span class="text-danger" asp-validation-for="MainImage"></span>
			</div>

			<div class="form-group">
				<input type="hidden" asp-for="MainImagePath" />
				<img src="~/assets/images/website-images/@Model.HoverImagePath" width="50" height="50"  />
				<label for="HoverImage">HoverImage</label>
				<input asp-for="HoverImage" class="form-control" id="HoverImage" placeholder="HoverImage">
				<span class="text-danger" asp-validation-for="HoverImage"></span>
			</div>

			<div class="form-group">
				<label for="categoryId">CategoryId</label>
				<select asp-for="CategoryId" id="CategoryId">
					<option value="null" disabled selected>-Category secin-</option>

					@foreach (Category category in ViewBag.Categories)
					{
						<option value="@category.Id">@category.Name</option>
					}
				</select>
				<span class="text-danger" asp-validation-for="CategoryId"></span>
			</div>

			<div class="form-group">
				<label for="TagId">TagId</label>
				<select asp-for="TagIds" id="TagIds">

					@foreach (Tag tag in ViewBag.Tags)
					{
						<option value="@tag.Id">@tag.Name</option>
					}
				</select>
				<span class="text-danger" asp-validation-for="CategoryId"></span>
			</div>

			<div class="form-group">
				<label asp-for="Rating">Rating</label>
				<select asp-for="Rating" class="form-control">
					<option value="">- Rating seçin -</option>
					@for (int i = 1; i <= 5; i++)
					{
						<option value="@i">
							@(new string('⭐', i))
						</option>
					}
				</select>


				<span class="text-danger" asp-validation-for="Rating"></span>
			</div>
			<button type="submit" class="btn btn-primary">Submit</button>
			<a asp-action="Index" class="btn btn-secondary">Cancel</a>
		</form>
	</div>
</div>



